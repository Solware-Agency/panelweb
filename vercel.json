{
  "version": 2,
  "builds": [
    {
      "src": "api/get-pdf.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/pdf/(.+)",
      "dest": "/api/get-pdf?filename=$1",
      "headers": {
        "Cache-Control": "no-store"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}